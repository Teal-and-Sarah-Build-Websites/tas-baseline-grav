
<div class="uk-container uk-margin-top uk-margin-bottom">
<div class="uk-grid article">
    <div class="uk-width-1-3 uk-visible@m">
        {% for image in page.media.images %}
            {{ image.cropZoom(600,600).html(page.header.image.title, page.header.image.alt) }}
        {% endfor %}
    </div>
    <div class="uk-width-2-3@m uk-width-1-1@m">
        <h2 class="uk-text-center uk-text-left@m">
            {{ page.title }}
        </h2>
        <hr class="uk-hidden@m">
        <div class="mobile-image uk-hidden@m">
            {% for image in page.media.images %}
                {{ image.cropZoom(250,250).html(page.header.image.title, page.header.image.alt) }}
            {% endfor %}
        </div>
       {{ page.summary }}
       {% if page.summary < page.content %}
            <a href="{{ page.url }}">READ MORE</a>
        {% endif %}
    </div>
</div>
</div>
