{% extends 'partials/base.html.twig' %}
{% block body %}
<div class="uk-container uk-margin-top uk-margin-bottom">
    <h2 class="item-header">
        {{ page.title }}
    </h2>

    <div class="uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m" uk-grid uk-lightbox="animation: slide">
         {% for image in page.media.images %}
         <div class="img-hover-zoom">
            <a class="uk-inline" href="{{image.url}}">
                {{ image.cropZoom(600,600).html(page.header.image.title, page.header.image.alt, 'uk-align-left uk-margin-remove-adjacent') }}
            </a>
        </div>
        {% endfor %}
    </div>
    <div class="description uk-margin-top">
        {{ page.content }}
    </div>
</div>
{% endblock %}
